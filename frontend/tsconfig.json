{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./dist",
      "baseUrl": "src",
      "allowJs": true,
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "module": "CommonJS"
  },
  "include": [
      "src",
      "./src/declaration.d.ts"
  ],
  "exclude": [
      "./plugins/**/*",
      "./typings/**/*",
      "./dist/**/*"
  ]
}